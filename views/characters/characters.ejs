<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Characters</title>
</head>
<body>
    <h1>Welcome <%= player.playerName %></h1>
    <a class="add-character-link" href="/players/<%= player._id %>/characters/add">Create a character</a>
    <h2>Here are all of your current characters</h2>
    <ul>
        <% characters.forEach((character) => { %>
        <a href="/playes/<%= player._id %>/characters/<%= character._id %>">
            <li><%= character.name %>: <%= character.class %>
                <form action="/players/<%= player._id %>/characters/<%= character._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Character</button>
                </form>
            </li>
        </a>
        <% }) %>
    </ul>
</body>
</html>