<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= player.playerName %>'s Characters</title>
</head>
<body class="characters-body">
<div class="characters-content">
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome <%= player.playerName %></h1>
    <a class="add-character-link" href="/players/<%= player._id %>/characters/add">Create a character</a>
    <h2>Here are all of your current characters</h2>
    <ul>
        <% characters.forEach((character) => { %>
        <a href="/players/<%= player._id %>/characters/<%= character._id %>">
            <li>
                <p><%= character.name %>: <%= character.class %></p>
                <form action="/players/<%= player._id %>/characters/<%= character._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Character</button>
                </form>
            </li>
        </a>
        <% }) %>
    </ul>
</div>
</body>
</html>