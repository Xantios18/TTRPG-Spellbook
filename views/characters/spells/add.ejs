<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Add Spell</title>
</head>
<body class="spell-creation-body">
<div class="spell-creation-content">
    <%- include('../../partials/_navbar.ejs') %>
    <a class="nav-link" href="/players/<%= player._id %>/characters/<%= character._id %>"><%= character.name %>'s Homepage</a>
    <h1>Spell Details</h1>
    <form class="spell-creation-form" action="/players/<%= player._id %>/characters/<%= character._id %>/spells" method="POST">
        <!-- name -->
        <div>
            <label for="name">Name:</label>
            <input type="text" name="name" id="name"/>
        </div>
        <!-- level -->
        <div>
            <label for="level">Level:</label>
            <input type="number" name="level" id="level"/>
        </div>
        <!-- school -->
        <div>
            <label for="school">School:</label>
            <select id="school" name="school">
                <option value="abjuration">Abjuration</option>
                <option value="conjuration">Conjuration</option>
                <option value="divination">Divination</option>
                <option value="enchantment">Enchantment</option>
                <option value="evocation">Evocation</option>
                <option value="illusion">Illusion</option>
                <option value="necromancy">Necromancy</option>
                <option value="transmutation">Transmutation</option>
            </select>
        </div>
        <!-- prepared -->
        <div>
            <label for="prepared">Prepared:</label>
            <input type="checkbox" name="prepared" id="prepared"/>
        </div>
        <!-- concentration -->
        <div>
            <label for="prepared">Concentration:</label>
            <input type="checkbox" name="concentration" id="concentration"/>
        </div>
        <!-- ritual -->
        <div>
            <label for="prepared">Ritual:</label>
            <input type="checkbox" name="ritual" id="ritual"/>
        </div>
        <!-- casting time -->
        <div>
            <label for="castingTime">Casting Time:</label>
            <select id="castingTime" name="castingTime">
                <option value="reaction">Reaction</option>
                <option value="bonus-action">Bonus Action</option>
                <option value="action">Action</option>
                <option value="one-minute">1 Minute</option>
                <option value="other">Other</option>
            </select>
        </div>
        <!-- verbal -->
        <div>
            <label for="verbalComponent">Verbal Component:</label>
            <input type="checkbox" name="verbalComponent" id="verbalComponent"/>
        </div>
        <!-- somatic -->
        <div>
            <label for="somaticComponent">Somatic Component:</label>
            <input type="checkbox" name="somaticComponent" id="somaticComponent"/>
        </div>
        <!-- material -->
        <div>
            <label for="materialComponent">Material Components:</label>
            <input type="text" name="materialComponent" id="materialComponent"/>
        </div>
        <!-- monetary -->
        <div>
            <label for="monetaryComponent">Monetary Components:</label>
            <input type="text" name="monetaryComponent" id="monetaryComponent"/>
        </div>
        <!-- duration -->
        <div>
            <label for="duration">Duration:</label>
            <input type="text" name="duration" id="duration"/>
        </div>
        <!-- range -->
        <div>
            <label for="range">Range (in feet):</label>
            <input type="number" name="range" id="range"/>
        </div>
        <!-- effect -->
        <div>
            <label for="effect">Effects:</label>
            <textarea name="effect" id="effect"></textarea>
        </div>
        <!-- notes -->
        <div>
            <label for="notes">Notes:</label>
            <textarea name="notes" id="notes"></textarea>
        </div>
        <!-- submit -->
        <button class="spell-submit-button" type="submit">Create Spell</button>
    </form>
</div>
</body>
</html>